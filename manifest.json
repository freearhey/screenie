{
  "name": "screenie",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "A tiny extension that takes a full page screenshot in one click.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/background.html",
    "persistent": false
  },
  "permissions": ["debugger", "tabs", "downloads"],
  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Make screenshot"
  }
}