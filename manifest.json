{
  "name": "screenie",
  "version": "0.2.0",
  "manifest_version": 3,
  "description": "A tiny extension that takes a full page screenshot in one click.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["debugger", "downloads", "tabs"],
  "action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Make screenshot"
  }
}
